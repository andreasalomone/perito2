# --- Google Cloud Project ---
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_REGION=europe-west1

# --- Cloud SQL (Database) ---
# Format: project-id:region:instance-name
CLOUD_SQL_CONNECTION_NAME=project-id:region:instance-name
DB_USER=report_user
DB_PASS=your-db-password
DB_NAME=perizia_db

# --- Storage (GCS) ---
STORAGE_BUCKET_NAME=your-bucket-name

# --- Cloud Tasks (Queue) ---
# Format: projects/{project}/locations/{region}/queues/{queue_name}
CLOUD_TASKS_QUEUE_PATH=projects/your-project/locations/europe-west1/queues/your-queue-name

# Service Account Email for Cloud Tasks (Required for Production Security)
# This is the email of the Service Account that Cloud Tasks uses to invoke the worker.
CLOUD_TASKS_SA_EMAIL=your-cloud-tasks-sa@your-project.iam.gserviceaccount.com

# --- AI (Gemini) ---
GEMINI_API_KEY=your-gemini-api-key

# --- Local Development Only ---
# Point this to your downloaded Service Account JSON key for local testing.
# On Cloud Run (Production), comment this out (it uses auto-discovery).
# GOOGLE_APPLICATION_CREDENTIALS="service-account.json"

# Force synchronous execution locally (Bypass Cloud Tasks)
RUN_LOCALLY=True
