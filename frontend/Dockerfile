# ==========================================
# Stage 1: Dependencies (Pruning)
# ==========================================
FROM node:20-bookworm-slim AS deps
WORKDIR /app

# Check https://github.com/nodejs/docker-node/tree/b4117f9333da4138b03a546ec926ef50a31506c3#nodealpine to understand why libc6-compat might be needed if you revert to Alpine.
# Since we are on Bookworm (Debian), we are good.

COPY package.json package-lock.json ./
# Install dependencies (frozen lockfile for consistency)
RUN npm ci

# ==========================================
# Stage 2: Builder
# ==========================================
FROM node:20-bookworm-slim AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .

# Disable Next.js telemetry during build
ENV NEXT_TELEMETRY_DISABLED=1

# Note: Firebase config is now read at runtime (not build time)
# Only NEXT_PUBLIC_API_URL is kept as a build-time argument if needed elsewhere
ARG NEXT_PUBLIC_API_URL
ENV NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL

RUN npm run build

# ==========================================
# Stage 3: Runner (Production)
# ==========================================
FROM node:20-bookworm-slim AS runner
WORKDIR /app

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1
ENV PORT=3000

# Create a non-root user (Standard for Node is uid 1001 for custom)
RUN groupadd --system --gid 1001 nodejs && \
    useradd --system --uid 1001 --gid 1001 nextjs

# Set correct permissions
RUN mkdir .next
RUN chown nextjs:nodejs .next

# Automatically leverage output traces to reduce image size
# Copy only the necessary files for the standalone server
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static
COPY --from=builder --chown=nextjs:nodejs /app/public ./public

# Switch to non-root user
USER nextjs

EXPOSE 3000

# Launch directly. No shell wrapper needed.
# server.js is the entrypoint generated by output: 'standalone'
CMD ["node", "server.js"]
